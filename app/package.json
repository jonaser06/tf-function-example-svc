{
    "name": "servicio-prueba",
    "version": "1.0.0",
    "description": "Servicio de prueba",
    "main": "handler.ts",
    "scripts": {
        "test": "jest",
        "lint": "eslint",
        "compile": "tsc",
        "build:prod": "esbuild src/functions/**/*.ts --bundle --minify --outdir=dist --outbase=src --sourcemap=inline --platform=node --target=node16.16.0",
        "watch": "esbuild src/functions/**/*.ts --bundle --minify --outdir=dist --outbase=src --sourcemap=inline --platform=node --target=node16.16.0 --watch",
        "invoke": "node invoke.js"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@aws-lambda-powertools/logger": "1.5.1",
        "@aws-lambda-powertools/tracer": "1.5.1",
        "@middy/core": "3.3.4",
        "aws-sdk": "2.1306.0",
        "aws-xray-sdk": "3.3.6",
        "dotenv": "16.0.2",
        "kafkajs": "2.2.0",
        "reflect-metadata": "0.1.13",
        "tsyringe": "4.7.0",
        "@aws-sdk/client-secrets-manager": "3.276.0",
        "@aws-sdk/client-dynamodb": "3.276.0",
        "inversify": "^6.0.1"
    },
    "devDependencies": {
        "@types/jest": "28.1.7",
        "@types/node": "18.7.4",
        "esbuild": "0.15.3",
        "esbuild-jest": "0.5.0",
        "esbuild-node-tsc": "2.0.1",
        "jest": "28.1.3",
        "nodemon": "2.0.19",
        "ts-jest": "28.0.8",
        "ts-node": "10.9.1",
        "typescript": "4.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "cjs",
            "js",
            "json",
            "ts"
        ],
        "rootDir": "tests",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./src/",
        "collectCoverage": true,
        "coverageReporters": [
            "text"
        ],
        "testEnvironment": "node",
        "verbose": true,
        "moduleNameMapper": {
            "src(.*)$": "<rootDir>/../src/$1"
        }
    }
}